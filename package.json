{
  "version": "3.0.0-beta.25",
  "name": "winnetoujs",
  "description": "The indie javascript constructor",
  "main": "src/winnetou.js",
  "files": [
    "dist/"
  ],
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/core/winnetou.d.ts",
      "import": "./dist/core/winnetou.js"
    },
    "./core/winnetou": "./dist/core/winnetou.js",
    "./modules/colorThemes": "./dist/modules/colorThemes.js",
    "./modules/router": "./dist/modules/router.js",
    "./modules/select": "./dist/modules/select.js",
    "./modules/select/animations": "./dist/modules/select/animations.js",
    "./modules/select/attributes": "./dist/modules/select/attributes.js",
    "./modules/select/dom-manipulation": "./dist/modules/select/dom-manipulation.js",
    "./modules/select/events": "./dist/modules/select/events.js",
    "./modules/select/index": "./dist/modules/select/index.js",
    "./modules/select/navigation": "./dist/modules/select/navigation.js",
    "./modules/select/positioning": "./dist/modules/select/positioning.js",
    "./modules/select/selectors": "./dist/modules/select/selectors.js",
    "./modules/translations": "./dist/modules/translations.js"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "escape-string-regexp": "^4.0.0",
    "js-beautify": "^1.15.4",
    "ncp": "2.0.0",
    "node-html-parser": "^7.0.1",
    "node-watch": "^0.7.4",
    "recursive-readdir": "^2.2.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "esbuild": "^0.25.9"
  },
  "scripts": {
    "build": "esbuild 'src/**/*.ts' --outdir=dist --format=esm --platform=browser --target=es2020 --sourcemap --outbase=src",
    "wbr:dev": "node wbr -b -v",
    "wbr": "node wbr -b -v -p",
    "wbr:quiet": "node wbr -b -p",
    "wbr:watch": "node wbr -b -v -p --watch",
    "build-fs": "node ./dist/buildWBR.js",
    "postinstall": "npm run-script build-fs",
    "type-check": "tsc --noEmit",
    "build-types": "tsc --emitDeclarationOnly"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cedrosdev/winnetoujs.git"
  },
  "keywords": [
    "javascript",
    "winnetou",
    "winnetoujs",
    "win",
    "framework",
    "frontend"
  ],
  "author": "Pamela Sedrez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cedrosdev/winnetoujs/issues"
  },
  "homepage": "https://winnetoujs.org"
}
