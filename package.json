{
  "version": "3.1.4-beta.3",
  "scripts": {
    "start": "npm run core && npm run modules && npm run wbr && cp -r source/* dist/ && npm run build-types",
    "core": "esbuild 'src/core/*.ts' --outdir=dist/core --format=esm --platform=browser --target=es2020 --sourcemap --outbase=src/core --resolve-extensions=.ts,.js",
    "modules": "esbuild 'src/modules/*.ts' --outdir=dist/modules --format=esm --platform=browser --target=es2020 --sourcemap --outbase=src/modules --resolve-extensions=.ts,.js",
    "wbr": "esbuild 'src/wbr/wbr.ts' --bundle --outfile=dist/wbr/wbr.js --format=cjs --platform=node --target=es2020 --resolve-extensions=.ts,.js --packages=external",
    "build-fs": "node ./dist/buildWBR.js",
    "postinstall": "npm run-script build-fs",
    "type-check": "tsc --noEmit",
    "build-types": "tsc --emitDeclarationOnly",
    "publish:alpha": "npm publish --tag alpha",
    "publish:beta": "npm publish --tag beta",
    "publish:latest": "npm publish"
  },
  "name": "winnetoujs",
  "description": "The indie javascript constructor",
  "main": "src/winnetou.js",
  "files": [
    "dist/"
  ],
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/core/winnetou.d.ts",
      "import": "./dist/core/winnetou.js"
    },
    "./core/constructos": {
      "types": "./dist/core/constructos.d.ts",
      "import": "./dist/core/constructos.js"
    },
    "./core/winnetou": {
      "types": "./dist/core/winnetou.d.ts",
      "import": "./dist/core/winnetou.js"
    },
    "./modules/colorThemes": {
      "types": "./dist/modules/colorThemes.d.ts",
      "import": "./dist/modules/colorThemes.js"
    },
    "./modules/router": {
      "types": "./dist/modules/router.d.ts",
      "import": "./dist/modules/router.js"
    },
    "./modules/translations": {
      "types": "./dist/modules/translations.d.ts",
      "import": "./dist/modules/translations.js"
    },
    "./modules/ssr": {
      "types": "./dist/modules/ssr.d.ts",
      "import": "./dist/modules/ssr.js"
    }
  },
  "dependencies": {
    "@types/node": "^24.0.10",
    "commander": "^14.0.0",
    "esbuild": "^0.25.9",
    "esbuild-plugin-d.ts": "^1.3.1",
    "escape-string-regexp": "^4.0.0",
    "js-beautify": "^1.15.4",
    "ncp": "2.0.0",
    "node-html-parser": "^7.0.1",
    "node-watch": "^0.7.4",
    "recursive-readdir": "^2.2.3"
  },
  "devDependencies": {
    "@types/js-beautify": "^1.14.3",
    "@types/recursive-readdir": "^2.2.4",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cedrosdev/winnetoujs.git"
  },
  "keywords": [
    "javascript",
    "winnetou",
    "winnetoujs",
    "win",
    "framework",
    "frontend"
  ],
  "author": "Pamela Sedrez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cedrosdev/winnetoujs/issues"
  },
  "homepage": "https://winnetoujs.org"
}
